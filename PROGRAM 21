#include <stdio.h>
int main() {
    float gross, allowance, deduction, net;
    printf("enter gross salary: ");
    scanf("%f", &gross);
    allowance = 0.10f * gross;  
    deduction = 0.03f * gross;   
    net = gross + allowance - deduction;  
    printf("\nnet Salary : %.2f\n", net);
    return 0;
}
